<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/head.ejs') -%>
    </head>
    <body>
        <div class="jumbotron">
            <div class="row justify-content-end">
                <div class="col-2">
                    <div class="container">
                        <% if (session) { %>
                            <img src="<%= session.image %>" class="img-fluid rounded-circle" width="100" height="100">
                            <p>Logged in as <%= session.name %></p>
                        <% } else { %>
                            <a href="/login">Login</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <div class ="col-md-8">
            <a href="/playlists">Playlists</a>
        </div>
        <%- include('partials/foot.ejs') -%>
    </body>
</html>
